<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <!--android:layout_width="match_parent"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/custom_card_list_name"
                style="@style/text_bold_15" />

            <TextView
                android:id="@+id/custom_card_list_gender"
                style="@style/text_14"
                android:layout_marginLeft="@dimen/_10sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/custom_card_list_email"
            style="@style/text_14"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/_5sdp" />

        <TextView
            android:id="@+id/custom_card_list_contact"
            style="@style/text_14"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="@dimen/_5sdp" />

        <TextView
            android:id="@+id/custom_card_list_city"
            style="@style/text_14"
            android:layout_marginTop="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/_5sdp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>